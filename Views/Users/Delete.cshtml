@model System.Collections.Generic.List<RegisterViewModel>

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
<div>
    <h4>ApplicationUser</h4>
    <hr />
    <div class=" active text-center">
            <div class="form-group">
                <label asp-for="First().Username"></label>
                <input asp-for="First().Username" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label class="control-label">Role </label>
                <input asp-for="First().Role" class="form-control" value="@Model[0].Role" readonly />
            </div>
    </div>
    <form asp-action="Delete" class="mb-5">
        <input type="hidden" asp-for="First().Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
