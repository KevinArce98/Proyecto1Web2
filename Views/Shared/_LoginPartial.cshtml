@using Microsoft.AspNetCore.Identity
@using Notes.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item mr-3">
                <p class="mb-0">
                    User logged in: <span class="text-primary">@SignInManager.Context.User.Identity.Name</span>
                </p>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-danger nav-link"><span class="no-icon">Log out</span></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a class="nav-link active" asp-area="" asp-controller="Account" asp-action="Login"><span class="no-icon">Log in</span></a></li>
    </ul>
}
